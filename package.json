{
  "name": "sim-element",
  "version": "0.0.11",
  "description": "Reactive, component-oriented view layer for modern web interfaces.",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "dev:docs": "vite --config vite.docs.ts",
    "build:docs": "vite build --config vite.docs.ts",
    "preview": "vite preview"
  },
  "dependencies": {
    "vue": "2.7.8"
  },
  "devDependencies": {
    "pinia": "^2.0.17",
    "vue-router": "3.5.4",
    "@types/node": "^18.6.2",
    "@vitejs/plugin-vue2": "1.1.2",
    "@vue/runtime-dom": "^3.2.37",
    "element-ui": "2.15.8",
    "escape-html": "^1.0.3",
    "markdown-it-container": "^3.0.0",
    "prismjs": "^1.28.0",
    "sass": "^1.54.0",
    "typescript": "^4.6.4",
    "vite": "3.0.0",
    "vite-plugin-md": "0.20.2",
    "vue-tsc": "^0.38.4"
  }
}